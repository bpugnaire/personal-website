---
layout: base.njk
---

<article class="blog-post">
  {% if coverImage %}
  <div class="post-cover-image">
    <img src="{{ coverImage }}" alt="{{ title }}" />
  </div>
  {% endif %}
  
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ date }}">{{ date | readableDate }}</time>
      {% if tags %}
      <div class="post-tags">
        {% for tag in tags %}
        {% if tag != "post" %}
        <span class="tag">{{ tag }}</span>
        {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
